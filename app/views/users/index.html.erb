
  <h1>Users List</h1>
  <table>

  <!-- admin -->
  <% if User.find_by_id(session[:user_id]).role == "admin" %>
        <tr>
            <td><b>UserID</b></td>
        </tr>

    <% for user in @users %>
         <tr>
            <td><%= link_to user.name, user %></td>
          </tr>
    <% end %>

    </table>
  <%= link_to 'New user', new_user_path %>

  <% if User.find_by_id(session[:user_id]).role == "admin" %>
    <%= link_to 'Back', :action => 'index', :controller => :admin %> <%end%>
    <br />
  <% end %>
  <!-- end admin -->





    <!-- doctor -->

  <% if User.find_by_id(session[:user_id]).role == "doctor" %>
