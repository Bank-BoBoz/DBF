
<!-- Admin -->
<% if User.find_by_id(session[:user_id]).role == "admin" %>
<h1>Listing logs</h1>

<table>
  <tr>
    <th>Value</th>
    <th>Time</th>
    <th>Category</th>
    <th>Note</th>
    <th>Owner</th>
    <th></th>
    <th></th>
  </tr>

  <% @log.each do |log| %>
          <tr>
            <td><%= log.value %></td>
            <td><%= log.time %></td>
            <td><%= log.category %></td>
            <td><%= log.note %></td>
            <td><%= log.own %></td>
            <td><%= link_to 'Show', log %></td>
            <td><%= link_to 'Edit', edit_log_path(log) %></td>
            <td><%= link_to 'Destroy', log, :confirm => 'Are you sure?', :method => :delete %></td>
          </tr>
      <% end %>
</table>

<br/>

<%= link_to 'Back', :action => :index, :controller => :admin %>
    <% end %>
<!-- endAdmin -->





